<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="4dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp">

        <!-- Avatar -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_avatar"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/CircleImage"
            android:layout_marginEnd="14dp"
            tools:src="@drawable/img" />

        <!-- CENTER TEXTS -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Username + Full name -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1E88E5"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    tools:text="Ismoil" />

                <TextView
                    android:id="@+id/tv_fullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:paddingStart="6dp"
                    tools:text="muhiddinovismoil" />
            </LinearLayout>

            <!-- Bio -->
            <TextView
                android:id="@+id/tv_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="14sp"
                android:maxLines="2"
                android:layout_marginTop="4dp"
                tools:text="Full-Stack Developer Node.js + React.js" />

            <!-- Location + icons -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:maxLines="1"
                    tools:text="Uzbekistan, Tashkent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" â€¢ "
                    android:textColor="#666666"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/git_repo_svgrepo_com"
                    />

                <TextView
                    android:id="@+id/tv_repo_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:layout_marginLeft="1dp"
                    tools:text="23" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="| "
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/followers_friends_icon" />

                <TextView
                    android:id="@+id/tv_followers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:layout_marginLeft="3dp"
                    tools:text="21" />
            </LinearLayout>
        </LinearLayout>

        <!-- Follow Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_follow"
            android:layout_width="72dp"
            android:layout_height="36dp"
            android:text="Follow"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textColor="#000000"
            app:cornerRadius="10dp"
            app:backgroundTint="#F3F3F3"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
